  "scripts": {
    "build": "tsc && yarn --cwd ./client build && mv ./client/build ./",
    "start": "NODE_ENV=react node ./dist/index.js",
    "dev": "NODE_ENV=dev nodemon index.js",
    "dev:react": "concurrently \"NODE_ENV=dev nodemon \" \"yarn --cwd ./client start\"",
